extends ../layouts/header.jade

block content
	nav#mainNav.navbar.navbar-expand-lg.bg-secondary.text-uppercase.fixed-top.navbar-shrink
		.container
			a.navbar-brand(href='/') 국방뉴스
			button.navbar-toggler.text-uppercase.font-weight-bold.bg-primary.text-white.rounded(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
				| Menu 
				i.fas.fa-bars
			#navbarResponsive.collapse.navbar-collapse
				ul.navbar-nav.ms-auto
					li.nav-item.mx-0.mx-lg-1
						a.nav-link.py-3.px-0.px-lg-3.rounded(href='/news/gb') News1
					li.nav-item.mx-0.mx-lg-1
						a.nav-link.py-3.px-0.px-lg-3.rounded(href='/news/gb') News2
					li.nav-item.mx-0.mx-lg-1
						a.nav-link.py-3.px-0.px-lg-3.rounded(href='/news/gb') News3
	.container-fluid#MainSection.marginForNavbar.h-100
		.row.h-100
			.col-md-6.h-100#NewsImage
				#carousel.carousel.slide(data-bs-interval=false).h-100.carousel-dark
					.carousel-inner.h-100
						.carousel-item.active.h-100
							embed(src='/test/testNews.pdf#toolbar=0&navpanes=0&scrollbar=0' type='application/pdf', width='100%', height='100%')
						.carousel-item.h-100
							embed(src='/test/testNews.pdf#toolbar=0&navpanes=0&scrollbar=0' type='application/pdf', width='100%', height='100%')
					button.carousel-control-prev(type='button' data-bs-target="#carousel" data-bs-slide='prev')
						span.carousel-control-prev-icon(aria-hidden='true')
						span.visually-hidden Previous
					button.carousel-control-next(type='button' data-bs-target="#carousel" data-bs-slide='next')
						span.carousel-control-next-icon(aria-hidden='true')
						span.visually-hidden Next
			.col-md-6.h-100
				.row-4.h-25
					#Summary.w-100.h-100
				.row-8.h-75
					#WordCloud.w-100.h-100