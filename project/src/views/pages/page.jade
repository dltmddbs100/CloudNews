extends ../layouts/header.jade

block content
	.container-fluid#MainSection.marginForNavbar.h-100
		.row.h-100
			.col-md-6.h-100#NewsImage.p-0
				#carousel.carousel.slide(data-bs-interval=false).h-100.carousel-dark
					.carousel-inner.h-100
						each page, index in news.pages
							.carousel-item.h-100(class=index==0?'active':'')
								embed.newsIMG(src=page.pageImageURL+'#toolbar=0&navpanes=0&scrollbar=0' type='application/pdf', width='100%', height='100%')
					span.carouselButtons.carousel-control-prev
						span#prev.carousel-control-prev-icon(type='button' aria-hidden='true')
						span.visually-hidden Previous
					span.carouselButtons.carousel-control-next
						span#next.carousel-control-next-icon(type='button' aria-hidden='true')
						span.visually-hidden Next
			.col-md-3.h-100
				canvas#graph(width="200" height="380" style="background: #fff")
			.col-md-3.h-100
				.row-4.h-50
					#Summary.w-100.h-100
						
				.row-8.h-50
					.w-100.h-100
						img#WordCloud(src=news.pages[0].wordcloudURL)
	script.
		var pages = !{JSON.stringify(news.pages)};
	script(src='https://cdn.jsdelivr.net/npm/chart.js')
	script(src='/javascripts/page.js')